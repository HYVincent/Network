<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2">

    <com.yinglan.alphatabs.AlphaTabsIndicator
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <com.yinglan.alphatabs.AlphaTabView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:padding="5dp"

            app:badgeBackgroundColor="#ffffff"
            app:tabIconNormal="@drawable/aad"
            app:tabIconSelected="@drawable/aaa"
            app:tabText="卧槽"
            app:tabTextSize="18sp"
            app:textColorNormal="@color/colorAccent"
            app:textColorSelected="@color/black" />

        <com.yinglan.alphatabs.AlphaTabView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"

            app:badgeBackgroundColor="#ffffff"
            app:tabIconNormal="@drawable/aac"
            app:tabIconSelected="@drawable/aae"
            app:tabText="卧槽"
            app:tabTextSize="18sp"
            app:textColorNormal="@color/colorAccent"
            app:textColorSelected="@color/black" />

        <com.yinglan.alphatabs.AlphaTabView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"

            app:badgeBackgroundColor="#ffffff"
            app:tabIconNormal="@drawable/aac"
            app:tabIconSelected="@drawable/aae"
            app:tabText="卧槽"
            app:tabTextSize="18sp"
            app:textColorNormal="@color/colorAccent"
            app:textColorSelected="@color/black" />

        <com.yinglan.alphatabs.AlphaTabView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"

            app:badgeBackgroundColor="#ffffff"
            app:tabIconNormal="@drawable/aac"
            app:tabIconSelected="@drawable/aae"
            app:tabText="卧槽"
            app:tabTextSize="18sp"
            app:textColorNormal="@color/colorAccent"
            app:textColorSelected="@color/black" />
    </com.yinglan.alphatabs.AlphaTabsIndicator>


</RelativeLayout>